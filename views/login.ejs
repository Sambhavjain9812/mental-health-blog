<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">/>

  <title>Login Page</title>

  <style>
    * {
      padding: 0;
      margin: 0;
      box-sizing: border-box;
    }

    body {
      background:
        #cfe8a9;
    }



    .logo {
      height: 250px;
      width: 500px;
    }

    .navbar-brand {
      font-family: "Poppins", sans-serif;
      font-size: 2.5rem;
      font-weight: bold;
    }

    .nav-item {
      padding: 0 18px;
      font-size: large;
    }

    .nav-item a {
      color: black;
    }

    .container-fluid {
      padding: 3% 15%;
    }

    .navbar-nav li a:hover {
      color: #1abc9c !important;
    }

    body {
      font-family: "Poppins", sans-serif;
    }

    .title {
      background-color: #cfe8a9;
      color: black;
      padding-left: 10%;
      /* align-items: center; */
    }

    .row {
      height: 600px;
      width: 1150px;
      border-radius: 30px;
      background: #e0e8a9bd;
      box-shadow: 12px 12px 22px grey;
    }

    img {
      border-top-left-radius: 30px;
      border-bottom-left-radius: 30px;
    }

    .btn1 {
      border: none;
      outline: none;
      height: 50px;
      width: 100%;
      background-color:
        black;
      color: white;
      border-radius: 4px;
      font-weight: bold;
    }

    .btn1:hover {
      background-color: white;
      border: 1px solid;
      color: black;
    }

    .padding {
      margin-left: 10%;
    }
  </style>

</head>

<body>

  <section class="title">
    <nav class="navbar navbar-expand-lg">
      <a class="navbar-brand" href="/landing">
        <img src="./images/logo.jpeg" alt="logo" class="logo" />
      </a>

      <div class="container-fluid">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0 navbar-right">

            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/post">Blog</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/analysis">Analysis</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/remedies">Remedies</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/faq">FAQ</a>
            </li>

        </div>
      </div>
    </nav>
  </section>
  <section class="Form my-4 mx-5">
    <div class="container">
      <div class="row padding no-gutters">
        <div class="col-lg-5">
          <img src="images/test.jpg" height="600px" width="450px" class="image" alt="" />
        </div>
        <div class="col-lg-7">
          <h1 class="font-weight-bold py-3 px-6 pt-5">Working with the Mind!</h1>
          <h4 class="font-weight-bold">Join Us</h4>
          <form action="/login" method="POST">
            <div class="form-row">
              <div class="col-lg-7">
                <input type="text" placeholder="Username" name="username" class="form-control my-3 p-4" required />
              </div>
            </div>
            <div class="form-row">
              <div class="col-lg-7">
                <input type="password" placeholder="*****" name="password" class="form-control my-3 p-4" required />
              </div>
            </div>
            <div class="form-row">
              <div class="col-lg-7">
                <button type="submit" class="btn1 mt-3 mb-5" href="/">Login</button>
              </div>
            </div>
            <a href="#">Forgot Password</a>
            <p>Dont't have an account?
              <a href="/register">Register here</a>
            </p>
          </form>
        </div>

      </div>
    </div>
  </section>
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
    integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
